<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/itemviriew_product_border"
    android:padding="10dp">
    <ImageView
        android:id="@+id/item_product_image"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:background="@drawable/productimage_style"
        android:clipToOutline="true"/>

    <!-- Product Name -->
    <TextView
        android:id="@+id/item_product_name"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textStyle="normal"
        android:text="Nike Sportswear Club Fleece"
        android:textSize="14sp"
        android:textColor="#000000" />
    <!-- Product Price -->
    <TextView
        android:id="@+id/item_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$99"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#1D1E20"
        android:layout_marginTop="4dp"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/item_product_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background"
        android:background="@drawable/productimage_style"
        android:clipToOutline="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Product Name -->
        <TextView
            android:id="@+id/item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:textStyle="normal"
            android:text="Nike Sportswear Club Fleece"
            android:textSize="10sp"
            android:textColor="#000000" />
        <!-- Brand Name -->
        <TextView
            android:id="@+id/item_product_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="normal"
            android:text="Nike"
            android:textSize="10sp"
            android:textColor="#000000" />
        <!-- Product Price -->
        <TextView
            android:id="@+id/item_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$99"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#1D1E20"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</LinearLayout>